     *     {
     *       "error": "UserNotFound"
     *     }
     *
     */

    function stories_fetchByStory($app, $db_sqlite, $id) {

        $results = $db_sqlite->stories->where("id = ?", $id);
 
 
        $app->response()->header("Content-Type", "application/json");
        echo json_encode($results);
    };